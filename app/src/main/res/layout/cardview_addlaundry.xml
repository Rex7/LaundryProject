<?xml version="1.0" encoding="utf-8"?>

    <androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/cardViewRec"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:clickable="true"
        app:cardUseCompatPadding="true"
        android:clipToPadding="true"
        app:cardBackgroundColor="#fafcfd"
        app:cardCornerRadius="2dp"
        app:cardElevation="5dp">

    <RelativeLayout
        android:id="@+id/cardview_relative"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/medCover_adp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:clickable="true"
            android:onClick="showDailog"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="40dp"
            android:contentDescription="cover"
            android:scaleType="fitXY"
            android:src="@android:drawable/ic_menu_add"
            android:focusable="true" />


        <TextView
            android:id="@+id/title_adp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/medCover_adp"
            android:layout_marginTop="15dp"
            android:layout_centerHorizontal="true"
            android:text="Add laundry"
            android:textColor="#941919"
            android:textSize="25sp" />



    </RelativeLayout>


</androidx.cardview.widget.CardView>
